<Window x:Class="Test.UserInfoConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="Chỉnh sửa thông tin người dùng" Height="500" Width="800">
    <Grid>
        <Grid.Background>
        <ImageBrush ImageSource="images/background-main.jpg"/>
      </Grid.Background>
    <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" MinWidth="40"/>
            <ColumnDefinition Width="Auto" MinWidth="40"/>
        </Grid.ColumnDefinitions>
        <Rectangle>
            <Rectangle.Fill>
                <ImageBrush ImageSource="images/background-main.jpg" />
            </Rectangle.Fill>
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="images/backmo.jpg"/>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Button x:Name="LogoutButton" 
            Width="30" 
            Height="30" 
            Grid.Column="2"
            Grid.Row="0"
            Background="LightBlue" 
            Foreground="White" 
            FontSize="18" 
            FontWeight="Bold" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            BorderBrush="Black" 
            Click="LogoutButton_Click"
            BorderThickness="1">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="LightBlue"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="Red" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="LightBlue" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="{TemplateBinding Background}" 
                                 Stroke="{TemplateBinding BorderBrush}" 
                                 StrokeThickness="{TemplateBinding BorderThickness}"/>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        <Image Source="pack://application:,,,/imageicon/logout.png" 
                               Width="16" 
                               Height="16" 
                               Margin="0,0,5,0"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="InfoButton" 
                Width="30" 
                Height="30" 
                Grid.Column="3"
                Grid.Row="0"
                Background="LightBlue" 
                Foreground="White" 
                FontSize="18" 
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                BorderBrush="Black" 
                Click="InfoButton_Click"
                BorderThickness="1">
            <Popup  x:Name="popupInfoMenu" 
                    PlacementTarget="{Binding ElementName=InfoButton}" 
                    StaysOpen="False" 
                    Placement="Bottom" 
                    HorizontalOffset="10" 
                    VerticalOffset="10">
                <StackPanel Background="LightGray" 
                            Width="200" 
                            HorizontalAlignment="Right">
                    <Button x:Name="changePassword"
                            Content="Đổi mật khẩu" 
                            Click="changePassword_Click"
                            FontWeight="Normal"/>

                    <Button x:Name="personInfo"
                            Content="Thông tin người dùng" 
                            Click="personInfo_Click"
                            FontWeight="Normal"/>
                </StackPanel>
            </Popup>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="{TemplateBinding Background}" 
                                 Stroke="{TemplateBinding BorderBrush}" 
                                 StrokeThickness="{TemplateBinding BorderThickness}"/>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="hamburgerButton"
                Width="30" 
                Height="30" 
                Content="☰"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderThickness="0"
                Background="Wheat"
                FontSize="20"
                Click="hamburgerButton_Click"/>

        <Popup x:Name="popupMenu" 
               PlacementTarget="{Binding ElementName=hamburgerButton}" 
               StaysOpen="False" 
               Placement="Bottom">
            <StackPanel Background="LightGray"
                        Width="200" 
                        HorizontalAlignment="Left">
                <Button x:Name="QLNS"  
                        Content="Quản lý nhân sự" 
                        Click="QLNS_Click"/>
                <Button x:Name="test1"  
                        Content="Test1" 
                        Click="test1_Click"/>
                <Button x:Name="test2"  
                        Content="Test2" 
                        Click="test2_Click"/>
            </StackPanel>
        </Popup>

        <Grid Grid.Row="1" 
              Grid.Column="1" 
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Chỉnh sửa thông tin người dùng" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="7"/>

            <TextBlock Text="Tên cán bộ nghiệp vụ: " 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       FontSize="18"
                       Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"/>
            <TextBox x:Name="CompanyNameTextBox" 
                     Margin="5"
                     Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3"/>

            <TextBlock Text="Cấp trực thuộc: " 
                       FontWeight="Bold" 
                       FontSize="18"
                       VerticalAlignment="Center"
                       Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
            <ComboBox x:Name="adminLevel"
                      Margin="5"
                      Loaded="adminLevel_Loaded"
                      SelectionChanged="adminLevel_SelectionChanged"
                      Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2"/>

            <TextBlock Text="Tên xã/huyện: " 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       FontSize="18"
                       Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"/>

            <ComboBox x:Name="tenXaHuyen" 
                     Margin="5" 
                     Width="150"
                     HorizontalAlignment="Left"
                     Loaded="tenXaHuyen_Loaded"
                     Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="5"/>

            <TextBlock Text="Tên đăng nhập: " 
                       FontWeight="Bold" 
                       FontSize="18"
                       VerticalAlignment="Center"
                       Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"/>
            <TextBox x:Name="UsernameTextBox" 
                     Margin="5"
                     Width="300"
                     IsEnabled="False"
                     Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="3"/>

            <TextBlock Text="Mật khẩu: " 
                       FontWeight="Bold" 
                       FontSize="18"
                       VerticalAlignment="Center"
                       Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"/>
            <TextBox x:Name="PasswordTextBox" 
                     Text="*******" 
                     FontSize="25"
                     Margin="5"
                     IsReadOnly="True"
                     Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2"/>

            <Button x:Name="showHide" 
                    Content="Hiện" 
                    Grid.Row="5" Grid.Column="5"
                    Background="Azure"
                    VerticalAlignment="Center"
                    Click="showHide_Click"/>

            <Button x:Name="changePasswordBtn" 
                    Content="Thay đổi mật khẩu"
                    Grid.Row="5" Grid.Column="6"
                    Grid.ColumnSpan="2"
                    Margin="5"
                    Background="Azure"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Click="changePasswordBtn_Click"/>

            <StackPanel x:Name="NewPasswordPanel" 
                        Orientation="Vertical" 
                        Grid.Row="7" Grid.Column="1" 
                        Visibility="Collapsed">
                <TextBlock Text="Mật khẩu mới:" 
                           FontWeight="Bold" 
                           Margin="0,10,0,0"/>
                <TextBox x:Name="NewPasswordTextBox" 
                         Margin="0,0,0,10"/>
                <TextBlock Text="Nhập lại mật khẩu mới:" 
                           FontWeight="Bold"/>
                <TextBox x:Name="ConfirmNewPasswordTextBox" 
                         Margin="0,0,0,10"/>
            </StackPanel>

            <Button  x:Name="return" 
                        Content="Quay lại"
                        Grid.Column="2"
                        Grid.Row="6"
                        Grid.ColumnSpan="2"
                        Width="100"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        BorderThickness="0"
                        Padding="7"
                        Click="return_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="White" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="saveChanges"
                        Content="Lưu thay đổi"
                        Background="White"
                        Grid.Column="5"
                        Grid.Row="6"
                        Width="120"
                        Padding="7"
                        FontSize="18"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        Foreground="Green"
                        Click="saveChanges_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="White" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>
    </Grid>
</Window>
