<Window x:Class="Test.QuanLyGiongVatNuoiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="Quản lý giống vật nuôi" Height="450" Width="800">
    <Grid>
        <Grid x:Name="Main"
              Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" MinWidth="40"/>
                <ColumnDefinition Width="Auto" MinWidth="40"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="LogoutButton" 
                Width="30" 
                Height="30" 
                Grid.Column="2"
                Grid.Row="0"
                Background="LightBlue" 
                Foreground="White" 
                FontSize="18" 
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                BorderBrush="Black" 
                Click="LogoutButton_Click"
                BorderThickness="1">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" 
                     Stroke="{TemplateBinding BorderBrush}" 
                     StrokeThickness="{TemplateBinding BorderThickness}"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                            <Image Source="pack://application:,,,/imageicon/logout.png" 
                   Width="16" 
                   Height="16" 
                   Margin="0,0,5,0"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="InfoButton" 
                Width="30" 
                Height="30" 
                Grid.Column="3"
                Grid.Row="0"
                Background="LightBlue" 
                Foreground="White" 
                FontSize="18" 
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                BorderBrush="Black" 
                Click="InfoButton_Click"
                BorderThickness="1">

                <Popup  x:Name="popupInfoMenu" 
                    PlacementTarget="{Binding ElementName=InfoButton}" 
                    StaysOpen="False" 
                    Placement="Bottom" 
                    HorizontalOffset="10" 
                    VerticalOffset="10">

                    <StackPanel Background="LightGray" 
                            Width="200" 
                            HorizontalAlignment="Right">

                        <Button x:Name="changePassword"
                            Content="Đổi mật khẩu" 
                            Click="changePassword_Click"
                            FontWeight="Normal"/>

                        <Button x:Name="personInfo"
                            Content="Thông tin người dùng" 
                            Click="personInfo_Click"
                            FontWeight="Normal"/>
                    </StackPanel>
                </Popup>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" 
                                 Stroke="{TemplateBinding BorderBrush}" 
                                 StrokeThickness="{TemplateBinding BorderThickness}"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="hamburgerButton"
                Foreground="Blue"
                Width="60" 
                Height="30" 
                Content="☰"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Ivory"
                BorderThickness="0"
                FontSize="18"
                Click="hamburgerButton_Click"/>

            <Popup x:Name="popupMenu" 
               PlacementTarget="{Binding ElementName=hamburgerButton}" 
               StaysOpen="False" 
               Placement="Bottom">
                <StackPanel Background="LightGray"
                            Width="200" 
                            HorizontalAlignment="Left">
                    <Button x:Name="administratorManageButton"
                            Content="Quản lý hành chính"
                            Click="administratorManageButton_Click"/>

                    <Button x:Name="statisticButton"
                            Content="Thống kê"
                            Click="statisticButton_Click" Grid.Column="1"/>
                </StackPanel>
            </Popup>

            <Grid x:Name="CompanyTable"
                Grid.Row="1" 
              Grid.Column="1" 
              Margin="10"
                  Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Trang quản lý giống vật nuôi" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20" 
                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                <Label x:Name="NumberOfCongTyActive"
                   Grid.Row="1"/>
                <Label x:Name="numberOfCompany"
                   Grid.Row="1"
                   Grid.Column="1"
                   HorizontalAlignment="Left"/>
                <Button Content="Tìm kiếm"
                    x:Name="search"
                    Grid.Column="0" Grid.Row="2"
                    Click="search_Click"/>
                <TextBox x:Name="searchbox"
                     Grid.Row="2" Grid.Column="1"/>
                <DataGrid x:Name="userDataGrid" 
                      IsReadOnly="true" 
                      Margin="0,10,0,-59" Grid.Row="3"
                      AutoGenerateColumns="False" Grid.ColumnSpan="2" Grid.RowSpan="9">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Dừng hoạt động công ty">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox Checked="CheckBox_Checked"
                                          ClickMode="Press"
                                          IsEnabled="True"
                                          Tag="{Binding ID}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="return"
                    Content="Quay lại" Margin="452,0,10,37"
                    Click="return_Click" Grid.Column="1"/>
            </Grid>
            <Grid x:Name="Statistic" 
                  Grid.Row="1" 
              Grid.Column="1" 
              Margin="10,0,-49,0"
                  Height="466" VerticalAlignment="Center" Grid.ColumnSpan="3"
                  Visibility="Collapsed">
                <Label Content="Thống kê" Grid.Column="0" Margin="24,28,513,333"
           FontWeight="Bold"
           FontSize="28"/>
                <Label x:Name="numberOfCompanyInFieldLabel"
           Content="loremipsum"
           Grid.Column="0" Margin="10,81,561,352"/>
                <Label x:Name="numberOfCompanyInField"
           Content="loremipsum" Margin="261,80,484,352"/>

                <Label Content="Loài vật muốn tra cứu: " Margin="3,126,663,276"/>

                <ComboBox x:Name="GiongVatNuoiTraCuu" Margin="137,131,383,308"/>

                <StackPanel Margin="434,23,110,295">
                    <Label Content="Chọn nhiệm vụ của công ty"
               FontWeight="Bold"/>
                    <RadioButton x:Name="sanXuatConGiongRadioButton"
                     Content="Sản xuất con giống"
                     Checked="sanXuatConGiongRadioButton_Checked"
                     IsChecked="True"/>
                    <RadioButton x:Name="sanXuatTinhPhoiAuTrungRadioButton"
                     Content="Sản xuất tinh phôi ấu trùng, cơ sở ấp trứng"
                     Checked="sanXuatTinhPhoiAuTrungRadioButton_Checked"/>
                    <RadioButton x:Name="muaBanRadioButton"
                     Content="Mua bán tinh phôi ấu trùng"
                     Checked="muaBanRadioButton_Checked"/>
                    <RadioButton x:Name="soHuuTrauBoDucLonRadioButton"
                     Content="Sở hữu trâu, bò đực, lợn"
                     Checked="soHuuTrauBoDucLonRadioButton_Checked"/>
                    <RadioButton x:Name="khaoNghiemRadioButton"
                     Content="Khảo nghiệm"
                     Checked="khaoNghiemRadioButton_Checked"/>
                </StackPanel>
                <Button x:Name="returnToMain"
        Content="Quay lại" 
            HorizontalAlignment="Center" 
            Margin="0,175,0,0" VerticalAlignment="Top"
            Click="returnToMain_Click"/>
            </Grid>
            <Grid x:Name="AdministratorManagement"
                Grid.Row="1" 
                Grid.Column="1" 
                Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Quản lý hành chính" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20" 
                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                <DataGrid x:Name="BangHuyen" 
                          Grid.Column="0" Grid.ColumnSpan="2" Margin="0,57,456,-327" Grid.RowSpan="12"
                          MouseDoubleClick="BangHuyen_MouseDoubleClick"
                          AutoGenerateColumns="False">
                </DataGrid>
                <DataGrid x:Name="BangXa" 
                          Grid.Column="1" Grid.ColumnSpan="2" Margin="290,57,0,-327" Grid.RowSpan="12"
                          AutoGenerateColumns="False">
                </DataGrid>
            </Grid>


            <Label Grid.Column="1" 
               x:Name="Greeting"
               HorizontalAlignment="Left" 
               VerticalAlignment="Center"/>

        </Grid>
    </Grid>
</Window>
