<Window x:Class="Test.UserInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="Thông tin người dùng" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/background-main.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" 
            Grid.Column="1" 
            Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Trang thông tin người dùng" 
                FontSize="28" 
                FontWeight="Bold" 
                       HorizontalAlignment="Center"
                Margin="10"
                Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"/>

            <TextBlock Text="ID Người dùng: "
                       FontWeight="Bold"
                       Margin="5"
                       FontSize="16"
                       Grid.Row="1"/>
            <TextBox x:Name="IDTextBox"
                     Grid.Row="1" Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Width="300"
                     Margin="5"
                     HorizontalAlignment="Left"
                     IsEnabled="False"/>
            <TextBlock Text="Tên người dùng: " 
                FontWeight="Bold" 
                       Margin="5"
                       FontSize="16"
                VerticalAlignment="Center"
                Grid.Row="2" Grid.Column="0"/>

            <TextBox x:Name="NameTextBox" 
                IsEnabled="False"
                     Width="300"
                     Margin="5"
                     HorizontalAlignment="Left"
                     Grid.ColumnSpan="2"
                Grid.Row="2" Grid.Column="1"/>

            <TextBlock Text="Số điện thoại"
                       IsEnabled="False"
                       FontWeight="Bold"
                       Margin="5"
                       FontSize="16"
                       Grid.Row="3"/>
            <TextBox x:Name="PhoneNumberTextBox"
                     Grid.ColumnSpan="2"
                     Width="300"
                     Margin="5"
                     HorizontalAlignment="Left"
                        Grid.Row="3" Grid.Column="1"
                        IsEnabled="False"  />
            <TextBlock Text="Cấp trực thuộc: " 
                FontWeight="Bold" 
                VerticalAlignment="Center"
                IsEnabled="False"
                Margin="5"
                       FontSize="16"
                Grid.Row="4" Grid.Column="0"/>

            <ComboBox x:Name="adminLevel" 
                Margin="5" 
                Loaded="adminLevel_Loaded"
                IsEnabled="False"
                SelectionChanged="adminLevel_SelectionChanged"
                Grid.Row="4" Grid.Column="1" />

            <TextBlock Text="Tên xã/huyện: " 
                FontWeight="Bold" 
                VerticalAlignment="Center"
                       Margin="5"
                       FontSize="16"
                Grid.Row="5" Grid.Column="0"/>

            <ComboBox x:Name="tenXaHuyen" 
             Grid.ColumnSpan="2"
                Margin="5"
                      Width="300"
                HorizontalAlignment="Left"
                Loaded="tenXaHuyen_Loaded"
                IsEnabled="False"
                Grid.Row="5" Grid.Column="1"/>

            <TextBlock Text="Tên đăng nhập: " 
                FontWeight="Bold" 
                VerticalAlignment="Center"
                       Margin="5"
                       FontSize="16"
                Grid.Row="6" Grid.Column="0"/>

            <TextBox x:Name="UsernameTextBox" 
             Grid.ColumnSpan="2"
                IsEnabled="False"
                     Width="300"
                     HorizontalAlignment="Left"
                     Margin="5"
                Grid.Row="6" Grid.Column="1"/>

            <TextBlock Text="Mật khẩu: " 
                FontWeight="Bold" 
                       Margin="5"
                       FontSize="16"
                VerticalAlignment="Center"
                Grid.Row="7" Grid.Column="0"/>
            <TextBox x:Name="PasswordTextBox" 
                Text="*******" 
                     FontSize="20"
                Width="150"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                IsReadOnly="True"
                Grid.Row="7" Grid.Column="1"/>

            <Button x:Name="showHide" 
                Content="Hiện" 
                Grid.Row="7" Grid.Column="2"
                Width="100"
                    HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="showHide_Click"/>

            <Button x:Name="changePasswordBtn" 
                Content="Thay đổi mật khẩu"
                Grid.Row="7" Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,0,0,10"
                Visibility="Collapsed"
                Click="changePasswordBtn_Click"/>

            <StackPanel x:Name="NewPasswordPanel" 
                Orientation="Vertical" 
                Grid.Row="9" Grid.Column="1" 
                Visibility="Collapsed">
                <TextBlock Text="Mật khẩu mới:" 
                    FontWeight="Bold" 
                    Margin="0,10,0,0"/>
                <TextBox x:Name="NewPasswordTextBox" 
                    Margin="0,0,0,10"/>
                <TextBlock Text="Nhập lại mật khẩu mới:" 
                    FontWeight="Bold"/>
                <TextBox x:Name="ConfirmNewPasswordTextBox" 
                    Margin="0,0,0,10"/>
            </StackPanel>

            <StackPanel Grid.Row="13" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="return" 
                    Content="Quay lại"
                        Margin="5"
                    HorizontalAlignment="Left"
                    Background="White"
                    BorderThickness="0"
                    Padding="7"
                    Click="return_Click"/>

                <Button x:Name="saveChangesOrMakeChange"
                    Content="Thay đổi thông tin"
                        Margin="5"
                    Background="White"
                    Padding="7"
                    Foreground="Green"
                    Click="saveChangesOrMakeChange_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
