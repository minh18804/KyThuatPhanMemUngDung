<Window x:Class="Test.UserInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="Thông tin người dùng" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" MinWidth="40"/>
            <ColumnDefinition Width="Auto" MinWidth="40"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" 
            Grid.Column="1" 
            Margin="10,10,10,-40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Trang thông tin người dùng" 
                FontSize="28" 
                FontWeight="Bold" 
                Margin="0,0,0,20" 
                Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

            <TextBlock Text="ID Người dùng: "
                       FontWeight="Bold"
                       Grid.Row="1"/>
            <TextBox x:Name="IDTextBox"
                     Grid.Row="1" Grid.Column="1"
                     IsEnabled="False"/>
            <TextBlock Text="Tên người dùng: " 
                FontWeight="Bold" 
                VerticalAlignment="Center"
                Grid.Row="2" Grid.Column="0"/>

            <TextBox x:Name="NameTextBox" 
                Margin="0,4,0,6" 
                IsEnabled="False"
                Grid.Row="2" Grid.Column="1"/>

            <TextBlock Text="Số điện thoại"
                       IsEnabled="False"
                       FontWeight="Bold"
                       Grid.Row="3"/>
            <TextBox x:Name="PhoneNumberTextBox"
                        Grid.Row="2" Grid.Column="1"
                        IsEnabled="False" HorizontalAlignment="Right" Margin="0,28,0,0" Grid.RowSpan="2" Width="604"/>
            <TextBlock Text="Cấp trực thuộc: " 
                FontWeight="Bold" 
                VerticalAlignment="Center"
                IsEnabled="False"
                Grid.Row="4" Grid.Column="0"/>

            <ComboBox x:Name="adminLevel" 
                Margin="0,1,413,0" 
                Loaded="adminLevel_Loaded"
                IsEnabled="False"
                SelectionChanged="adminLevel_SelectionChanged"
                Grid.Row="4" Grid.Column="1" Height="22" VerticalAlignment="Top"/>

            <TextBlock Text="Tên xã/huyện: " 
                FontWeight="Bold" 
                VerticalAlignment="Center"
                Grid.Row="5" Grid.Column="0"/>

            <ComboBox x:Name="tenXaHuyen" 
                Margin="0,5,0,5" 
                Width="191"
                HorizontalAlignment="Left"
                Loaded="tenXaHuyen_Loaded"
                IsEnabled="False"
                Grid.Row="5" Grid.Column="1"/>

            <TextBlock Text="Tên đăng nhập: " 
                FontWeight="Bold" 
                VerticalAlignment="Center"
                Grid.Row="6" Grid.Column="0"/>

            <TextBox x:Name="UsernameTextBox" 
                Margin="0,6,0,4" 
                IsEnabled="False"
                Grid.Row="6" Grid.Column="1"/>

            <TextBlock Text="Mật khẩu: " 
                FontWeight="Bold" 
                VerticalAlignment="Center"
                Grid.Row="7" Grid.Column="0"/>
            <TextBox x:Name="PasswordTextBox" 
                Text="***" 
                Margin="0,5,399,5" 
                IsReadOnly="True"
                Grid.Row="7" Grid.Column="1"/>

            <Button x:Name="showHide" 
                Content="Hiện" 
                Grid.Row="7" Grid.Column="1"
                Margin="192,0,315,0"
                VerticalAlignment="Center"
                Click="showHide_Click"/>

            <Button x:Name="changePasswordBtn" 
                Content="Thay đổi mật khẩu"
                Grid.Row="7" Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,0,0,10"
                Visibility="Collapsed"
                Click="changePasswordBtn_Click"/>

            <StackPanel x:Name="NewPasswordPanel" 
                Orientation="Vertical" 
                Grid.Row="9" Grid.Column="1" 
                Visibility="Collapsed">
                <TextBlock Text="Mật khẩu mới:" 
                    FontWeight="Bold" 
                    Margin="0,10,0,0"/>
                <TextBox x:Name="NewPasswordTextBox" 
                    Margin="0,0,0,10"/>
                <TextBlock Text="Nhập lại mật khẩu mới:" 
                    FontWeight="Bold"/>
                <TextBox x:Name="ConfirmNewPasswordTextBox" 
                    Margin="0,0,0,10"/>
            </StackPanel>

            <StackPanel Grid.Row="13" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="return" 
                    Content="Quay lại"
                    Width="130"
                    HorizontalAlignment="Left"
                    Background="White"
                    BorderThickness="0"
                    Margin="0,0,10,0"
                    Padding="7"
                    Click="return_Click"/>

                <Button x:Name="saveChangesOrMakeChange"
                    Content="Thay đổi thông tin"
                    Width="130"
                    Background="White"
                    Padding="7"
                    Foreground="Green"
                    Click="saveChangesOrMakeChange_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
