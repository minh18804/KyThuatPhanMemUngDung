<Window x:Class="Test.CongTyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CongTyWindow" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Tên:" Margin="0,10,0,5"/>
            <TextBox Name="TenTextBox" Height="25" IsReadOnly="True" />

            <TextBlock Text="Tên Đăng Nhập:" Margin="0,10,0,5"/>
            <TextBox Name="UsernameTextBox" Height="25" IsReadOnly="True" />

            <TextBlock Text="Mật Khẩu:" Margin="0,10,0,5"/>
            <TextBox Name="PasswordTextBox" Height="25" IsReadOnly="True" />

            <TextBlock Text="Số Lượng:" Margin="0,10,0,5"/>
            <TextBox Name="SoLuongTextBox" Height="25" />

            <!-- Nút "Tải Dữ Liệu" -->
            <Button Content="Tải Dữ Liệu" Click="LoadData_Click" Margin="0,20,0,0" Height="30"/>

            <!-- Nút "Update" để cập nhật số lượng -->
            <Button Name="UpdateButton" Content="Cập Nhật Số Lượng" Click="UpdateButton_Click" Margin="0,20,0,0" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
