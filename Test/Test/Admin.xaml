<Window x:Class="Test.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Icon="pack://application:,,,/imageicon/anh.png"
        Title="Trang chủ" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/background-main.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" MinWidth="40"/>
            <ColumnDefinition Width="Auto" MinWidth="40"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="Greeting" 
               Grid.Column="1" 
               HorizontalAlignment="Center" 
               Width="572" 
               Height="30" 
               VerticalAlignment="Top" Margin="0,8,0,0"/>

        <Button x:Name="LogoutButton" 
                Width="30" 
                Height="30" 
                Grid.Column="7"
                Grid.Row="0"
                Background="LightBlue" 
                Foreground="White" 
                FontSize="18" 
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                BorderBrush="Black" 
                Click="LogoutButton_Click"
                BorderThickness="1">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="LightBlue"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="Red" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="{TemplateBinding Background}" 
                                 Stroke="{TemplateBinding BorderBrush}" 
                                 StrokeThickness="{TemplateBinding BorderThickness}"/>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        <Image Source="pack://application:,,,/imageicon/logout.png" 
                               Width="16" 
                               Height="16" 
                               Margin="0,0,5,0"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="InfoButton" 
                Width="30" 
                Height="30"
                Grid.Column="8"
                Grid.Row="0"
                Background="LightBlue" 
                Foreground="Black" 
                FontSize="18" 
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                BorderBrush="Black" 
                Click="InfoButton_Click"
                BorderThickness="1">
            <Popup  x:Name="popupInfoMenu" 
                    PlacementTarget="{Binding ElementName=InfoButton}" 
                    StaysOpen="False" 
                    Placement="Bottom" 
                    HorizontalOffset="10" 
                    VerticalOffset="10">
                <StackPanel Background="LightGray" 
                            Width="200"
                            HorizontalAlignment="Right">
                    <Button x:Name="changePassword"
                            Content="Đổi mật khẩu" 
                            Click="changePassword_Click"
                            FontWeight="Normal"/>

                    <Button x:Name="personInfo"
                            Content="Thông tin người dùng " 
                            Click="personInfo_Click"
                            FontWeight="Normal"/>
                </StackPanel>
            </Popup>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="{TemplateBinding Background}" 
                                 Stroke="{TemplateBinding BorderBrush}" 
                                 StrokeThickness="{TemplateBinding BorderThickness}"/>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="hamburgerButton"
                Foreground="Blue"
                Width="60" 
                Height="30" 
                Content="☰"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Ivory"
                BorderThickness="0"
                FontSize="18"
                Click="hamburgerButton_Click"/>

        <Popup x:Name="popupMenu" 
               PlacementTarget="{Binding ElementName=hamburgerButton}" 
               StaysOpen="False" 
               Placement="Bottom">
            <StackPanel Background="LightGray"
                        Width="200" 
                        HorizontalAlignment="Left">
                <Button x:Name="userInfoConfig"  
                        Content="Chỉnh sửa thông tin người dùng" 
                        Click="userInfoConfig_Click"/>
                <Button x:Name="test"  
                        Content="Test"
                        Click="test_Click"/>
                <Button x:Name="testt" 
                        Content="Test"
                        Click="testt_Click"/>
            </StackPanel>
        </Popup>

        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="Trang chủ"
               FontWeight="Bold"
               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="23"
               FontSize="33"/>

            <Label Content="Số lượng người dùng: "
                   FontStyle="Italic"
                   FontSize="18"
                   FontWeight="DemiBold"
                   Grid.Row="1" Grid.Column="0"/>
            <Label x:Name="numberOfUser"
                   Grid.Row="1" Grid.Column="1"/>

            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                <TextBox x:Name="searchTextBox" 
                         Width="200" 
                         Height="30"
                         Margin="132,7,0,0" 
                         VerticalAlignment="Top" 
                         HorizontalAlignment="Left"/>
                <Button x:Name="searchButton" 
                        Content="Tìm kiếm" 
                        Width="100" 
                        Margin="5"
                        Height="30"
                        Background="LightCyan"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left" 
                        Click="searchButton_Click"/>
            </Grid>
        </Grid>
        <StackPanel Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="3" HorizontalAlignment="Right">
            <Label Content="Nhóm đối tượng tìm kiếm: "
                   FontWeight="Bold"
                   FontSize="18"/>
            <RadioButton x:Name="CongTy"
                         FontSize="16"
                         Content="Công ty"
                         Checked="CongTy_Checked"/>
                         
            <RadioButton x:Name="Company"
                         Content="Cán bộ nghiệp vụ"   
                         FontSize="16"
                         Checked="Company_Checked"
                         IsChecked="True"/>
        </StackPanel>


        <DataGrid x:Name="userDataGrid" 
                  Grid.Row="2" 
                  Grid.RowSpan="3"
                  Grid.Column="1"
                  Grid.ColumnSpan="6"
                  IsReadOnly="true"
                  Background="Beige">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="ShowPassword">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox Checked="CheckBox_Checked"
                                      ClickMode="Press"
                                      IsEnabled="True"
                                      Tag="{Binding Username}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Chỉnh sửa">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="configData"
                                      Checked="configData_Checked"
                                      Unchecked="configData_Unchecked"
                                      ClickMode="Release"
                                      Tag="{Binding Username}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
