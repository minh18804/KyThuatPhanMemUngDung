<Window x:Class="Test.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Icon="pack://application:,,,/imageicon/anh.png"
        Title="Trang chủ" Height="450" Width="800">
    <Grid>
        <Grid x:Name="Main">
            <Grid.Background>
                <ImageBrush ImageSource="images/background-main.jpg"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" MinWidth="40"/>
                <ColumnDefinition Width="Auto" MinWidth="40"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="Greeting" 
               Grid.Column="1" 
               HorizontalAlignment="Center" 
               Width="572" 
               Height="30" 
               VerticalAlignment="Top" Margin="0,8,0,0"/>

            <Button x:Name="LogoutButton" 
                Width="30" 
                Height="30" 
                Grid.Column="7"
                Grid.Row="0"
                Background="LightBlue" 
                Foreground="White" 
                FontSize="18" 
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                BorderBrush="Black" 
                Click="LogoutButton_Click"
                BorderThickness="1">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="LightBlue"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="Red" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" 
                                 Stroke="{TemplateBinding BorderBrush}" 
                                 StrokeThickness="{TemplateBinding BorderThickness}"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            <Image Source="pack://application:,,,/imageicon/logout.png" 
                               Width="16" 
                               Height="16" 
                               Margin="0,0,5,0"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="InfoButton" 
                Width="30" 
                Height="30"
                Grid.Column="8"
                Grid.Row="0"
                Background="LightBlue" 
                Foreground="Black" 
                FontSize="18" 
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                BorderBrush="Black" 
                Click="InfoButton_Click"
                BorderThickness="1">
                <Popup  x:Name="popupInfoMenu" 
                    PlacementTarget="{Binding ElementName=InfoButton}" 
                    StaysOpen="False" 
                    Placement="Bottom" 
                    HorizontalOffset="10" 
                    VerticalOffset="10">
                    <StackPanel Background="LightGray" 
                            Width="200"
                            HorizontalAlignment="Right">
                        <Button x:Name="changePassword"
                            Content="Đổi mật khẩu" 
                            Click="changePassword_Click"
                            FontWeight="Normal"/>

                        <Button x:Name="personInfo"
                            Content="Thông tin người dùng " 
                            Click="personInfo_Click"
                            FontWeight="Normal"/>
                    </StackPanel>
                </Popup>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" 
                                 Stroke="{TemplateBinding BorderBrush}" 
                                 StrokeThickness="{TemplateBinding BorderThickness}"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="hamburgerButton"
                Foreground="Blue"
                Width="60" 
                Height="30" 
                Content="☰"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Ivory"
                BorderThickness="0"
                FontSize="18"
                Click="hamburgerButton_Click"/>

            <Popup x:Name="popupMenu" 
               PlacementTarget="{Binding ElementName=hamburgerButton}" 
               StaysOpen="False" 
               Placement="Bottom">
                <StackPanel Background="LightGray"
                        Width="200" 
                        HorizontalAlignment="Left">

                    <Button x:Name="AdministratorManageButton"  
                        Content="Quản lý hành chính"
                        Click="AdministratorManageButton_Click"/>
                    <Button x:Name="testt" 
                        Content="Test"
                        Click="testt_Click"/>
                </StackPanel>
            </Popup>

            <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Trang chủ"
               FontWeight="Bold"
               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="23"
               FontSize="33"/>

                <Label Content="Số lượng người dùng: "
                   FontStyle="Italic"
                   FontSize="18"
                   FontWeight="DemiBold"
                   Grid.Row="1" Grid.Column="0"/>
                <Label x:Name="numberOfUser"
                   Grid.Row="1" Grid.Column="1"
                   HorizontalAlignment="Left"
                   FontSize="18"/>

                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                    <TextBox x:Name="searchTextBox" 
                         Width="173" 
                         Height="30"
                         Margin="132,7,0,0" 
                         VerticalAlignment="Top" 
                         HorizontalAlignment="Left"/>
                    <Button x:Name="searchButton" 
                        Content="Tìm kiếm" 
                        Width="100" 
                        Margin="5"
                        Height="30"
                        Background="LightCyan"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left" 
                        Click="searchButton_Click"/>
                </Grid>
            </Grid>
            <StackPanel x:Name="LinhVucHoatDongStackPanel"
                    Grid.Row="1" Grid.Column="4" Margin="0,0,55,268" Grid.RowSpan="4" Grid.ColumnSpan="2"
                    Visibility="Collapsed">
                <Label Content="Lĩnh vực hoạt động"
                   FontWeight="Bold"/>
                <RadioButton x:Name="Giong_Vat_Nuoi_RadioButton"
                         Content="Giống vật nuôi"
                         IsChecked="True"
                         Checked="Giong_Vat_Nuoi_RadioButton_Checked"/>
                <RadioButton x:Name="Nguon_Gen_Giong_RadioButton"
                         Content="Nguồn gen giống"
                         Checked="Nguon_Gen_Giong_RadioButton_Checked"/>
                <RadioButton x:Name="Thuc_An_Chan_Nuoi_RadioButton"
                         Content="Thức ăn chăn nuôi"
                         Checked="Thuc_An_Chan_Nuoi_RadioButton_Checked"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="65,1,0,267" Grid.RowSpan="4" Width="195">
                <Label Content="Nhóm đối tượng tìm kiếm: "
                   FontWeight="Bold"
                   FontSize="14
                   "/>
                <RadioButton x:Name="CongTy"
                         FontSize="12
                         "
                         Content="Công ty"
                         Checked="CongTy_Checked"/>

                <RadioButton x:Name="CanBoNghiepVu"
                         Content="Cán bộ nghiệp vụ"   
                         FontSize="12
                         "
                         Checked="CanBoNghiepVu_Checked"
                         IsChecked="True"/>
            </StackPanel>


            <DataGrid x:Name="userDataGrid" 
                  Grid.Row="2" 
                  Grid.RowSpan="3"
                  Grid.Column="1"
                  Grid.ColumnSpan="6"
                  IsReadOnly="true"
                  AutoGenerateColumns="False"
                  Background="Beige"
                  MouseDoubleClick="userDataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Hiện mật khẩu">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Checked="ShowPassword_Checked"
                                      ClickMode="Press"
                                      IsEnabled="True"
                                      Tag="{Binding Username}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid x:Name="ConfigUserData"
              Visibility="Collapsed">
            <Grid Grid.Row="1" 
          Grid.Column="1" 
          Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Chỉnh sửa thông tin người dùng" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

                <TextBlock Text="Tên: " 
                   FontWeight="Bold" 
                   VerticalAlignment="Center"
                   Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="NameTextBox" 
                 Margin="0,0,0,10" 
                 Grid.Row="1" Grid.Column="1"/>

                <!-- Thêm hàng SDT -->
                <TextBlock Text="SDT: " 
                   FontWeight="Bold" 
                   VerticalAlignment="Center"
                   Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="SDTTextBox" 
                 Margin="0,0,0,10" 
                 Grid.Row="2" Grid.Column="1"/>

                <TextBlock Text="Cấp trực thuộc: " 
                   FontWeight="Bold" 
                   VerticalAlignment="Center"
                   Grid.Row="3" Grid.Column="0"/>
                <ComboBox x:Name="adminLevel" 
                  Margin="0,1,413,1" 
                  Loaded="adminLevel_Loaded"
                  SelectionChanged="adminLevel_SelectionChanged"
                  Grid.Row="3" Grid.Column="1"/>

                <TextBlock Text="Tên xã/huyện: " 
                   FontWeight="Bold" 
                   VerticalAlignment="Center"
                   Grid.Row="4" Grid.Column="0"/>
                <ComboBox x:Name="tenXaHuyen" 
                  Margin="0,5,0,5" 
                  Width="130"
                  HorizontalAlignment="Left"
                  Grid.Row="4" Grid.Column="1"/>

                <TextBlock Text="Tên đăng nhập: " 
                   FontWeight="Bold" 
                   VerticalAlignment="Center"
                   Grid.Row="5" Grid.Column="0"/>
                <TextBox x:Name="UsernameTextBox" 
                 Margin="0,6,0,4" 
                 IsEnabled="False"
                 Grid.Row="5" Grid.Column="1"/>

                <TextBlock Text="Mật khẩu: " 
                   FontWeight="Bold" 
                   VerticalAlignment="Center"
                   Grid.Row="6" Grid.Column="0"/>
                <PasswordBox x:Name="PasswordTextBox" 
                 Margin="90,5,560,5" 
                 IsEnabled="False"
                 Grid.Row="6" Grid.ColumnSpan="2"/>

                <Button x:Name="showHide" 
                Content="Hiện" 
                Grid.Row="6" Grid.Column="1"
                Margin="149,0,358,0"
                VerticalAlignment="Center"
                Click="showHide_Click"/>

                <Button x:Name="changePasswordBtn" 
                Content="Thay đổi mật khẩu"
                Grid.Row="6" Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,0,0,10"
                Click="changePasswordBtn_Click"/>

                <StackPanel x:Name="NewPasswordPanel" 
                    Orientation="Vertical" 
                    Grid.Row="8" Grid.Column="1" 
>
                    <TextBlock Text="Mật khẩu mới:" 
                       FontWeight="Bold" 
                       Margin="0,10,0,0"/>
                    <TextBox x:Name="NewPasswordTextBox" 
                     Margin="0,0,0,10"/>
                    <TextBlock Text="Nhập lại mật khẩu mới:" 
                       FontWeight="Bold"/>
                    <TextBox x:Name="ConfirmNewPasswordTextBox" 
                     Margin="0,0,0,10"/>
                </StackPanel>

                <StackPanel Grid.Row="11" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="return" 
                    Content="Quay lại"
                    Width="130"
                    HorizontalAlignment="Left"
                    Background="White"
                    BorderThickness="0"
                    Margin="0,0,10,0"
                    Padding="7"
                    Click="return_Click"/>

                    <Button x:Name="saveChanges"
                    Content="Lưu thay đổi"
                    Width="130"
                    Background="White"
                    Padding="7"
                    Foreground="Green"
                    Click="saveChanges_Click"/>
                </StackPanel>
                <TextBox x:Name="showedPassword"
                         HorizontalAlignment="Left" 
                         Margin="90,0,0,0" 
                         Grid.Row="6" 
                         TextWrapping="Wrap" 
                         IsReadOnly="True"
                         Visibility="Collapsed"
                         VerticalAlignment="Center" 
                         Width="144" 
                         Grid.ColumnSpan="2"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
