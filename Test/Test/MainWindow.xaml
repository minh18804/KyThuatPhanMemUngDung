<Window x:Class="Test.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="Đăng nhập" Height="450" Width="800" Background="White">
    <Grid>
        <StackPanel         HorizontalAlignment="Center"
                            VerticalAlignment="Center">

            <Label          Content="Hệ thống quản lý chăn nuôi"
                            FontSize="28"
                            FontWeight="Bold"
                            Background="White"/>

            <Label          Content="Trang đăng nhập"
                            HorizontalAlignment="Center"
                            FontStyle="Italic"
                            FontSize="18"/>
            <Label          Content="   "
                            Height="15"/>
            
            <Label          Content="Quyền truy cập"/>
            <StackPanel>
                <RadioButton x:Name="admin"
                             Content="Admin"
                             GroupName="Roles"
                             IsChecked="True"/>
                <Label Content="    "
                       Height="10"/>
                <RadioButton x:Name="nhanVien"
                             Content="Cấp xã"
                             GroupName="Roles"/>
                <Label Content="    "
                       Height="10"/>
                <RadioButton x:Name="khach"
                             Content="Cấp huyện"
                             GroupName="Roles"/>
                <Label Content="   "
                       Height="10"/>
            </StackPanel>

            <Grid Margin="10">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label      Content="Tên đăng nhập:" 
                            Grid.Row="0" 
                            Grid.Column="0" 
                            FontSize="16" 
                            VerticalAlignment="Center"/>

                <TextBox    x:Name="Username" 
                            Grid.Row="0" 
                            Grid.Column="1" 
                            Padding="5" 
                            Width="179" 
                            Background="White"
                            KeyDown="username_KeyDown"/>

                <Label      Content="Mật khẩu:" 
                            Grid.Row="2" 
                            Grid.Column="0" 
                            FontSize="16" 
                            VerticalAlignment="Center"/>

                <PasswordBox x:Name="Password" 
                             Grid.Row="2" 
                             Grid.Column="1" 
                             Padding="5" 
                             Width="179" 
                             Background="White"
                             KeyDown="password_KeyDown"/>
            </Grid>

            <Button x:Name="login"
                    Content="Đăng nhập" 
                    Click="login_Click"
                    Width="230"
                    FontSize="18"
                    FontWeight="Bold"
                    Background="White"
                    BorderThickness="0"
                    Margin="10"/>
            
            <Button x:Name="register" 
                    Content="Đăng ký"
                    Click="register_Click"
                    Background="White"
                    BorderThickness="0"
                    Width="130"
                    Margin="10"/>
            
            <Button x:Name="passwordChange" 
                    Content="Đổi mật khẩu"
                    Click="passwordChange_Click"
                    Background="White"
                    BorderThickness="0"
                    Width="130"
                    Margin="10"/>
            
        </StackPanel>
    </Grid>
</Window>
