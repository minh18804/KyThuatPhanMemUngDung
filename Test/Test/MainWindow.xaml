<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="Đăng nhập" Height="450" Width="800" Background="Orange">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <Label          Content="Hệ thống quản lý chăn nuôi"
                            FontSize="28"
                            FontWeight="Bold"
                            Background="Orange"/>

            <Label          Content="Trang đăng nhập"
                            HorizontalAlignment="Center"
                            FontStyle="Italic"
                            FontSize="18"/>

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label      Content="Tên đăng nhập:" 
                            Grid.Row="0" 
                            Grid.Column="0" 
                            FontSize="16" 
                            VerticalAlignment="Center"/>

                <TextBox    x:Name="Username" 
                            Grid.Row="0" 
                            Grid.Column="1" 
                            Padding="5" 
                            Width="179" 
                            Background="Beige"
                            KeyDown="Username_KeyDown"/>

                <Label      Content="Mật khẩu:" 
                            Grid.Row="1" 
                            Grid.Column="0" 
                            FontSize="16" 
                            VerticalAlignment="Center"/>

                <PasswordBox x:Name="Password" 
                             Grid.Row="1" 
                             Grid.Column="1" 
                             Padding="5" 
                             Width="179" 
                             Background="Beige"
                             KeyDown="Password_KeyDown"/>
            </Grid>

            <Button x:Name="Login"
                    Content="Đăng nhập" 
                    Click="Login_Click"
                    Width="130"
                    Margin="10"/>
            <Button x:Name="Register" 
                    Content="Đăng ký"
                    Click="Register_Click"
                    Background="Orange"
                    BorderThickness="0"
                    Width="130"
                    Margin="10"/>
            <Button x:Name="PasswordChange" 
                    Content="Đổi mật khẩu"
                    Click="PasswordChange_Click"
                    Background="Orange"
                    BorderThickness="0"
                    Width="130"
                    Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
